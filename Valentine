<script>
  const noBtn = document.getElementById("noBtn");
  const yesBtn = document.getElementById("yesBtn");
  const chat = document.getElementById("chat");
  const actions = document.getElementById("actions");
  const success = document.getElementById("success");

  const teasingMessages = [
    "Excuse me?? ğŸ˜",
    "That button is broken btw ğŸ˜‚",
    "No is not an option, madam ğŸ™„",
    "Nice try Fuchu ğŸ˜Œ",
    "The universe says YES ğŸ’«",
    "Why are you running? ğŸƒâ€â™€ï¸ğŸ’¨",
    "Stop playing hard to get ğŸ˜œ",
    "Just click Yes already ğŸ’š"
  ];

  let teaseIndex = 0;

  function addHerMessage(text) {
    const msg = document.createElement("div");
    msg.className = "msg from-her";
    msg.innerText = text;
    chat.appendChild(msg);
    chat.scrollTop = chat.scrollHeight;
  }

  function moveNoButton() {
    const x = Math.random() * 140 - 70;
    const y = Math.random() * 40 - 20;
    noBtn.style.transform = `translate(${x}px, ${y}px)`;

    addHerMessage(teasingMessages[teaseIndex % teasingMessages.length]);
    teaseIndex++;
  }

  noBtn.addEventListener("mouseover", moveNoButton);
  noBtn.addEventListener("click", moveNoButton);

  yesBtn.addEventListener("click", () => {
    actions.style.display = "none";
    success.style.display = "block";
    addHerMessage("Okayyy yes ğŸ’–ğŸ¥°");
  });
</script>

